<%- include('../includes/header.ejs') %>
    <main>
        <% if(carts.length>0){ %>
            <% for(cart of carts){ %>
                <div class="card d-flex align-center cart">
                    <h3 class="cart-title" style="margin-right: .8rem;"><%= cart.title %> </h3>
                    <span class="badge badge-danger"><%= cart.quantity %> </span>
                    <form action="/delete-cart" method="post" style="margin-left:auto;">
                        <input type="hidden" value="<%= cart._id %>" name="id">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            <% } %>  
            <div class="d-flex justify-center" style="margin-top: 1rem;">
                <form action="/order" method="post">
                    <button type="submit" class="btn btn-outline-warning" >Order</button>
                </form>
            </div>
         
        <% }else{ %>
            <h2>No Carts Items</h2>
        <% } %>   
       
    </main>
<%- include('../includes/footer.ejs') %>  