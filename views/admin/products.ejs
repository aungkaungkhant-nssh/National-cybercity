<%- include('../includes/header.ejs') %>
    <main>
        <div class="product-lists">
            <% if(products.length > 0){ %>
                <% for(product of products){ %>
                    <div class="product-list">
                        <h3 class="product-title"><%= product.title %> </h3>
                        <img src="/<%= product.image %> " alt="">
                        <div class="product-text">
                            <p class="product-description"><%= product.description %> </p>
                            <span class="product-price"><%= product.price %> $</span>
                        </div>
                        <div class="btn-lists">
                             <a class="btn btn-warning" href="/admin/edit-product/<%= product._id %>?edit=true">Edit</a>
                            <!-- <form action="/admin/delete-product" method="post" style="display: inline-block;"> -->
                                <input type="hidden" value="<%= product._id %>" name="id">
                                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                                <button class="btn btn-danger" type="button" onclick="deleteProduct(this)">Delete</button>
                            <!-- </form> -->
                        </div>
                    </div>
                <% } %> 
            <% }else{ %>  
                <h2>No Product Not found</h2>
            <% } %> 
        </div>
    </main>
<%- include('../includes/footer.ejs') %> 
<script src="../../js/admin.js"></script>